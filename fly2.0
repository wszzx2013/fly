-- 检测设备类型
local function isMobile()
    return UserInputService.TouchEnabled and not UserInputService.KeyboardEnabled
end

if isMobile() then
    MobileControls.Visible = true
    MainFrame.Position = UDim2.new(0.35, 0, 0.05, 0)
    MainFrame.Size = UDim2.new(0.6, 0, 0.2, 0)
end

-- 飞行控制函数
local function startFlying()
    if not character or not rootPart or not humanoid then return end
    
    flying = true
    humanoid.PlatformStand = true
    
    flightBodyVelocity.Parent = rootPart
    flightBodyGyro.Parent = rootPart
    
    ToggleFlight.Text = "禁用飞行 (F)"
    ToggleFlight.BackgroundColor3 = Color3.fromRGB(150, 80, 80)
end

local function stopFlying()
    flying = false
    
    if humanoid then
        humanoid.PlatformStand = false
    end
    
    if flightBodyVelocity then
        flightBodyVelocity.Velocity = Vector3.new(0, 0, 0)
        flightBodyVelocity.Parent = nil
    end
    
    if flightBodyGyro then
        flightBodyGyro.Parent = nil
    end
    
    ToggleFlight.Text = "启用飞行 (F)"
    ToggleFlight.BackgroundColor3 = Color3.fromRGB(80, 80, 150)
end

-- 更新速度显示
local function updateSpeedDisplay()
    SpeedDisplay.Text = "速度: " .. flightSpeed
    SpeedSlider.Text = tostring(flightSpeed)
end

-- 速度控制
IncreaseSpeed.MouseButton1Click:Connect(function()
    flightSpeed = math.min(flightSpeed + speedStep, maxSpeed)
    updateSpeedDisplay()
end)

DecreaseSpeed.MouseButton1Click:Connect(function()
    flightSpeed = math.max(flightSpeed - speedStep, minSpeed)
    updateSpeedDisplay()
end)

SpeedSlider.FocusLost:Connect(function(enterPressed)
    local newSpeed = tonumber(SpeedSlider.Text)
    if newSpeed then
        flightSpeed = math.min(maxSpeed, math.max(minSpeed, newSpeed))
        updateSpeedDisplay()
    else
        SpeedSlider.Text = tostring(flightSpeed)
    end
end)

-- 切换飞行
ToggleFlight.MouseButton1Click:Connect(function()
    if flying then
        stopFlying()
    else
        startFlying()
    end
end)

